---
import { NAVIGATION, SOCIAL_LINKS, SITE } from '@config/site';
import { Package, Linkedin, Twitter, Facebook } from 'lucide-react';
import { languages, ui } from '../i18n/ui';

const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const currentPathname = Astro.url.pathname;

// Remove base from start if present to get pure path (Locale detection fix)
const purePath = currentPathname.startsWith(base) && base.length > 0 
  ? currentPathname.slice(base.length) 
  : currentPathname;

const segments = purePath.split('/').filter(Boolean);
const currentLocale = (segments[0] && Object.keys(languages).includes(segments[0])) ? segments[0] : 'es';

const rawNavItems = NAVIGATION[currentLocale as keyof typeof NAVIGATION] || NAVIGATION.es;
const siteInfo = SITE[currentLocale as keyof typeof SITE] || SITE.es;
const t = ui[currentLocale as keyof typeof ui] || ui.es;

const formatUrl = (url: string, isExternal: boolean = false) => {
  if (isExternal || url.startsWith('http://') || url.startsWith('https://')) {
    return url;
  }
  return base + url;
};

const navItems = rawNavItems.map(item => ({
  ...item,
  href: formatUrl(item.href, 'external' in item && item.external)
}));
---

