        <div class="flex flex-wrap gap-6 items-center">
            <!-- Funding Logos -->
            <div>
                <img 
                  src={base + '/logos/MCIU.Gob.Web.svg'} 
                  alt="Ministerio de Ciencia, Innovaci贸n y Universidades" 
                  class="w-auto h-auto"
                />
            </div>
             <div>
                <a href={currentLocale === 'en' ? "https://next-generation-eu.europa.eu/index_en" : "https://next-generation-eu.europa.eu/index_es"} target="_blank" rel="noopener noreferrer">
                    <img 
