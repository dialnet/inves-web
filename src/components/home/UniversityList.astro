<section id="universidades" class="py-24 bg-linear-to-b from-slate-50 to-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16 reveal">
      <div
        class="inline-block px-4 py-2 mb-4 bg-blue-100 text-blue-800 text-sm font-semibold rounded-full"
      >
        {collabTitle}
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">
        {mainTitle}
      </h2>
      <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
        {desc}
      </p>
    </div>

    <!-- Sponsoring Universities -->
    <div class="mb-16">
      <h3
        class="text-3xl font-bold text-slate-800 mb-8 text-center border-b pb-4 border-slate-200"
      >
        {sponsorsTitle}
      </h3>
      <div
        class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 items-stretch"
      >
        {
          sponsoringUniversities.map((uni) => (
            <UniversityCard
              name={uni.name}
              logo={uni.logo}
              url={uni.url}
              class="reveal"
            />
          ))
        }
      </div>
    </div>

    <!-- Other Participating Universities -->
    <div>
      <h3
        class="text-3xl font-bold text-slate-800 mb-8 text-center border-b pb-4 border-slate-200"
      >
        {participantsTitle}
      </h3>
      <div
        class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 items-stretch"
      >
        {
          participatingUniversities.map((uni) => (
            <UniversityCard
              name={uni.name}
              logo={uni.logo}
              url={uni.url}
              class="reveal"
            />
          ))
        }
      </div>
    </div>
  </div>
</section>
