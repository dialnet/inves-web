---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ContentSection from "../../components/content/ContentSection.astro";
import ContentCard from "../../components/content/ContentCard.astro";

const contactUrl =
  "https://soporte.dialnet.unirioja.es/portal/es/newticket?departmentId=54059000000007061&layoutId=54059000000023011";
---

<BaseLayout title="Contact | Inv-es">
  <!-- Hero Section -->
  <section
    class="relative overflow-hidden bg-gradient-to-br from-blue-600 via-blue-700 to-teal-600 py-20"
  >
    <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-10"></div>
    <div
      class="container relative mx-auto px-4 sm:px-6 lg:px-8 text-center reveal"
    >
      <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">Contact</h1>
      <p class="text-xl md:text-2xl text-blue-100 max-w-3xl mx-auto">
        We are here to help you
      </p>
    </div>
  </section>

  <ContentSection
    background="white"
    maxWidth="default"
    paddingY="medium"
    centered
  >
    <div class="space-y-12">
      <div class="text-center space-y-6 max-w-2xl mx-auto reveal">
        <p class="text-xl text-slate-700 leading-relaxed">
          For any questions, ideas, or issues you would like to raise, you can
          contact us through the form below.
        </p>

        <div class="pt-4">
          <a
            href={contactUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-8 py-4 text-lg font-bold text-white bg-gradient-to-r from-blue-600 to-indigo-600 rounded-full shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300"
          >
            Contact Us
            <svg
              class="w-5 h-5 ml-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <div class="grid md:grid-cols-2 gap-8 mt-16 text-left reveal">
        <ContentCard padding="large" variant="highlighted">
          <div class="flex items-start space-x-4">
            <div
              class="flex-shrink-0 w-12 h-12 rounded-lg bg-blue-100 flex items-center justify-center text-blue-600"
            >
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold text-slate-900 mb-2">Visit Us</h3>
              <p class="text-slate-600">Calle Barriocepo 10</p>
              <p class="text-slate-600">26001 Logro√±o</p>
              <p class="text-slate-600">La Rioja (Spain)</p>
            </div>
          </div>
        </ContentCard>

        <ContentCard padding="large" variant="highlighted">
          <div class="flex items-start space-x-4">
            <div
              class="flex-shrink-0 w-12 h-12 rounded-lg bg-blue-100 flex items-center justify-center text-blue-600"
            >
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold text-slate-900 mb-2">Email Us</h3>
              <p class="text-slate-600 break-all">
                <a
                  href="mailto:dialnet.desarrollo@unirioja.es"
                  class="hover:text-blue-600 transition-colors"
                >
                  dialnet.desarrollo@unirioja.es
                </a>
              </p>
            </div>
          </div>
        </ContentCard>
      </div>
    </div>
  </ContentSection>
</BaseLayout>
